<div id="<%= dom_id wallet %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Store:</strong>
    <%= wallet.store_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= wallet.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= wallet.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Active:</strong>
    <%= wallet.active %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Singular:</strong>
    <%= wallet.singular %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Plural:</strong>
    <%= wallet.plural %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Expire unit method:</strong>
    <%= wallet.expire_unit_method %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this wallet", wallet, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this wallet', edit_wallet_path(wallet), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
