<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-2xl">Campaigns</h1>
    <%= link_to 'Add Campaign', new_campaign_path, class: "rounded py-2 px-5 bg-indigo-600 text-white block font-small uppercase" %>
  </div>

  <table id="campaigns" class="border-collapse border border-slate-400 min-w-full">
    <thead>
      <tr class="bg-slate-100">
        <th class="border border-slate-300 py-1 px-1">Order</th>
        <th class="border border-slate-300 py-1 px-1">Name</th>
        <th class="border border-slate-300 py-1 px-1">Campaign type</th>
        <th class="border border-slate-300 py-1 px-1">Active</th>
        <th class="border border-slate-300 py-1 px-1">Active from</th>
        <th class="border border-slate-300 py-1 px-1">Active to</th>
        <th class="border border-slate-300 py-1 px-1">Created at</th>
        <th class="border border-slate-300 py-1 px-2"></th>
      </tr>
    </thead>
    <tbody>
      <%= render @campaigns %>
    </tbody>
  </table>
</div>
