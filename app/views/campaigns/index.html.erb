<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-12">
    <h1 class="font-bold text-4xl">Campaigns</h1>
    <%= link_to 'New campaign', new_campaign_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <table id="campaigns" class="border-collapse border border-slate-400 min-w-full">
    <thead>
      <tr class="bg-slate-100">
        <th class="border border-slate-300 py-3 px-7">Order</th>
        <th class="border border-slate-300 py-3 px-7">Name</th>
        <th class="border border-slate-300 py-3 px-7">Campaign type</th>
        <th class="border border-slate-300 py-3 px-7">Active</th>
        <th class="border border-slate-300 py-3 px-7">Active from</th>
        <th class="border border-slate-300 py-3 px-7">Active to</th>
        <th class="border border-slate-300 py-3 px-7">Created at</th>
        <th class="border border-slate-300 py-3 px-7"></th>
      </tr>
    </thead>
    <tbody>
      <%= render @campaigns %>
    </tbody>
  </table>
</div>
