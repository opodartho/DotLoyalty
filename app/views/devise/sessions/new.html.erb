<div class="max-2-full w-full px-2 sm:px-12 lg:pr-20 mb-12 lg:mb-0">
  <div class="relative">
    <div class="p-6 sm:py-8 sm:px-12 rounded-lg bg-white shadow-xl">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="text-center">
          <h1 class="text-2xl leading-normal mb-3 font-bold text-grey-800 text-center">
            Welcome Back
          </h1>
        </div>
        <hr class="block w-12 h-0.5 mx-auto my-5 bg-gray-700 border-gray-700">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>

        <div class="mb-6">
          <div class="flex flex-wrap flex-row">
            <div class="flex-shrink max-w-full w-1/2">
              <label for="password" class="inline-block mb-2">Password</label>
            </div>
            <div class="flex-shrink max-w-full w-1/2 text-right">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: 'hover:text-blue-700' %><br />
              <% end %>
            </div>
          </div>
          <%= f.input_field :password, autocomplete: 'current-password' %>
        </div>

        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="grid">
          <button type="submit" class="py-2 px-4 inline-block text-center rounded leading-normal text-gray-100 bg-indigo-500 border border-indigo-500 hover:text-white hover:bg-indigo-600 hover:ring-0 hover:border-indigo-600 focus:bg-indigo-600 focus:border-indigo-600 focus:outline-none focus:ring-0">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="inline-block w-4 h-4 ltr:mr-2 rtl:ml-2 bi bi-box-arrow-in-right" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"></path>
              <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"></path>
            </svg>
            Login
          </button>
        </div>
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="mt-4">
          <p class="text-center mb-0">
            Don't have an account?
            <%= link_to "Register", new_registration_path(resource_name), class: 'hover:text-indigo-500' %>
          </p>
        </div>
      <% end %>

    </div>
  </div>
</div>
